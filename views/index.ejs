<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <form align='right' action='/logoff' method='post'>
      <input type='submit' value='Logout'/>
    </form>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %>, <%= locals.user %></p>
    <form action='/entry' method='post'>
      <p><input type='text' name='miles' placeholder='Distance'/>
      <input type='text' name='gas' placeholder='Amount of gas'/>
      <input type='submit' value='Add'/></p>
    </form>
    <% if (errors) { %>
    <% errors.forEach(function(error) { %>
    <p class='error'><%= error %></p>
    <% }) %>
    <% } %>
    <% if (entries[0]) { %>
    <table>
      <tr>
        <td>MPG</td>
        <td>Distance (mi)</td>
        <td>Gas (gal)</td>
      </tr>
      <% entries.forEach(function(entry) { %>
      <tr>
        <td><%= entry.mpg %></td>
        <td><%= entry.miles %></td>
        <td><%= entry.gas %></td>
      </tr>
      <% }) %>
    </table>
    <% } %>
  </body>
</html>
